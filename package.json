  "repository": "Morendil/PureFun",
  "author": {
    "name": "Laurent Bossavit"
  },
  "scripts": {
    "webpack": "DEBUG=purs-loader* DEBUG_DEPTH=100 webpack --progress --bail",
    "webpack:watch": "PATH=$PATH:../releases/psc-package DEBUG=purs-loader* DEBUG_DEPTH=100 webpack --progress --display-error-details --display verbose --watch",
    "webpack:server": "webpack-dev-server --progress --inline --hot --host 0.0.0.0",
    "webpack:server:debug": "DEBUG=purs-loader* DEBUG_DEPTH=100 webpack-dev-server --progress --inline --hot --host 0.0.0.0",
    "heroku-postbuild": "bower install && webpack -p"
  },
  "dependencies": {
    "bower": "^1.8.0",
    "express": "^4.15.4",
    "purescript": "^0.11.0",
    "purescript-psa": "^0.5.0",
    "purs-loader": "^3.1.1",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
